<%= link_to 'New Project', new_project_path, :class=>'add_link' %>

<table id='list_projects' class='std_table'>
<thead>
  <tr>
    <th>Project ID</th>
    <th>User</th>
    <th>Name</th>
    <th>Samples</th>
    <th>Description</th>
    <th>Date</th>
    <th></th>
   </tr>
</thead>
<tbody>
<% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= @h_users[project.user_id].firstname %> <%= @h_users[project.user_id].name %></td>
    <td><%= project.name %></td>
    <td><%= project.samples.map{|s| s.name}.join("\n") %></td>
    <td><%= project.description %></td>
    <td><%= display_date(project.created_at) %></td>
    <td>
<!--    <td><%= link_to 'Show', project %></td>-->
    <%= link_to '', edit_project_path(project), :class=> 'edit_link' %>
    <%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'trash_link' %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

